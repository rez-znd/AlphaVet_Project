<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlphaVet.Cadas3">

    <Grid 
        RowDefinitions="*,Auto" 
        BackgroundColor="White">

        <ScrollView 
            Grid.Row="0"
            BackgroundColor="White">

            <VerticalStackLayout 
                Padding="30,0" 
                Spacing="15">

                <VerticalStackLayout>

                    <Image
                            WidthRequest="110"
                            Source="logoalphav.png"
                            Margin="-135,0,0,10"
                            VerticalOptions="Center"
                            HorizontalOptions="Center"
                           />

                    <Label
                            Text="AlphaVet"
                            FontFamily="AlphaVet"
                            FontSize="30"
                            TextColor="Black"
                            VerticalTextAlignment="Center"
                            HorizontalTextAlignment="Center"
                            Margin="95,-110,0,15"
                            />
                    
                </VerticalStackLayout>

                <VerticalStackLayout>

                    <Label
                        FontFamily="MainFont"
                        Text="E-mail"
                        TextColor="Black"
                        WidthRequest="205"
                        Margin="-15,10,0,5"
                        FontAttributes="Bold"
                        FontSize="18"/>

                    <Border
                        Stroke="#ff888f"
                        StrokeThickness="2"
                        HeightRequest="45"
                        WidthRequest="230"
                        StrokeShape="RoundRectangle 5">

                        <Entry
                            x:Name="emailV"
                            FontFamily="MainFont"
                            FontSize="18"
                            FontAttributes="Bold"
                            HorizontalTextAlignment="Center"
                            BackgroundColor="white"
                            TextColor="Black"
                            />

                    </Border>

                </VerticalStackLayout>

                <VerticalStackLayout>

                    <Label
                        FontFamily="MainFont"
                        Text="Nome"
                        WidthRequest="205"
                        TextColor="Black"
                        Margin="-15,0,0,5"
                        FontAttributes="Bold"
                        FontSize="18"/>

                    <Border
                        Stroke="#ff888f"
                        StrokeThickness="2"
                        HeightRequest="45"
                        WidthRequest="230"
                        StrokeShape="RoundRectangle 5">

                        <Entry
                            x:Name="nomeResV"
                            FontFamily="MainFont"
                            Placeholder="Ex: Pedro Silva"
                            FontSize="18"
                            FontAttributes="Bold"
                            HorizontalTextAlignment="Center"
                            BackgroundColor="white"
                            TextColor="Black"
                            />

                    </Border>
                </VerticalStackLayout>

                <VerticalStackLayout>

                    <Label
                        FontFamily="MainFont"
                        Text="CPF"
                        Margin="5,0,0,5"
                        WidthRequest="225"
                        TextColor="Black"
                        FontSize="18"
                        FontAttributes="Bold"
                        />

                    <Border
                        Stroke="#ff888f"
                        StrokeThickness="2"
                        HeightRequest="45"
                        WidthRequest="230"
                        StrokeShape="RoundRectangle 5">

                        <Entry
                            x:Name="cpfV"
                            FontFamily="MainFont"
                            Placeholder="Ex: 123.456.789/10"
                            FontSize="18"
                            FontAttributes="Bold"
                            HorizontalTextAlignment="Center"
                            BackgroundColor="white"
                            TextColor="Black"
                            />

                    </Border>
                </VerticalStackLayout>

                <VerticalStackLayout>

                    <Label
                        FontFamily="MainFont"
                        Text="Data de nascimento"
                        WidthRequest="225"
                        TextColor="Black"
                        Margin="5,0,0,5"
                        FontAttributes="Bold"
                        FontSize="18"/>

                    <Border
                        Stroke="#ff888f"
                        StrokeThickness="2"
                        HeightRequest="45"
                        WidthRequest="230"
                        StrokeShape="RoundRectangle 5">

                        <DatePicker
                            x:Name="dataNascV"
                            FontFamily="MainFont"
                            FontSize="18"
                            HorizontalOptions="Center"
                            WidthRequest="226"                                            
                            FontAttributes="Bold"
                            BackgroundColor="white"
                            TextColor="Black"
                            Format="dd/MM/yyyy"
                            />

                    </Border>
                </VerticalStackLayout>

                <VerticalStackLayout>

                    <Label
                        FontFamily="MainFont"
                        Text="Senha"
                        Margin="-15,0,0,5"
                        WidthRequest="205"
                        TextColor="Black"
                        FontAttributes="Bold"
                        FontSize="18"/>

                    <Border
                        Stroke="#ff888f"
                        StrokeThickness="2"
                        HeightRequest="45"
                        WidthRequest="230"
                        StrokeShape="RoundRectangle 5">

                        <Entry
                            x:Name="passV"
                            FontFamily="MainFont"
                            FontSize="18"
                            FontAttributes="Bold"
                            HorizontalTextAlignment="Center"
                            BackgroundColor="white"
                            TextColor="Black"
                            IsPassword="True"
                            />

                    </Border>
                </VerticalStackLayout>

                <Button
                    FontFamily="MainFont"
                    x:Name="confirm"
                    Text="Confirmar"
                    BorderWidth="2"
                    BorderColor="#ff888f"
                    BackgroundColor="white"
                    TextColor="Black"
                    WidthRequest="105"
                    FontAttributes="Bold"
                    FontSize="14"
                    CornerRadius="20"
                    Margin="122,10,0,0"
                    Clicked="confirm_Pressed"
                    Pressed="OnButtonPressed"
                    Released="OnButtonReleased"/>

                <Button
                    FontFamily="MainFont"
                    x:Name="back"
                    Text="Voltar"
                    BorderWidth="2"
                    BorderColor="#ff888f"
                    BackgroundColor="white"
                    TextColor="Black"
                    WidthRequest="105"
                    FontSize="14"
                    CornerRadius="20"
                    FontAttributes="Bold"
                    Margin="-3,-58,120,0"
                    Clicked="back_Pressed"
                    Pressed="OnButtonPressed"
                    Released="OnButtonReleased"/>

            </VerticalStackLayout>
        </ScrollView>

        <Label 
            FontFamily="MainFont"
            Grid.Row="1"
            FontAttributes="Bold"
            Text="Termos de Uso | PolÃ­tica de Dados"
            TextColor="Black"
            HorizontalTextAlignment="Center"
            VerticalTextAlignment="Center"
            Padding="10"/>
    </Grid>

</ContentPage>