<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlphaVet.AddAnimal">

    <Grid 
        RowDefinitions="*,Auto" 
        BackgroundColor="White">

        <ScrollView 
            Grid.Row="0"
            BackgroundColor="White">

            <VerticalStackLayout 
                Padding="30,0" 
                Spacing="15">

                <VerticalStackLayout>

                    <Image
                            WidthRequest="80"
                            Source="logoalphav.png"
                            Margin="-130,-10,0,10"
                            VerticalOptions="Center"
                            HorizontalOptions="Center"
                           />

                    <Label
                            Text="AlphaVet"
                            FontFamily="AlphaVet"
                            FontSize="30"
                            VerticalTextAlignment="Center"
                            HorizontalTextAlignment="Center"
                            Margin="70,-92,0,15"
                            />
                </VerticalStackLayout>

                <HorizontalStackLayout
                    Spacing="-150"
                    Margin="-32,0,0,0"
                    VerticalOptions="Center"
                    HorizontalOptions="Center">
                <VerticalStackLayout>

                    <Label
                        FontFamily="MainFont"
                        Text="ID"
                        WidthRequest="225"
                        FontAttributes="Bold"
                        TextColor="Black"
                        Padding="50,0,0,5"
                        FontSize="18"
                        />

                    <Border
                        Stroke="#ff888f"
                        StrokeThickness="2"
                        HeightRequest="45"
                        WidthRequest="70"
                        Margin="-72,0,0,0"
                        StrokeShape="RoundRectangle 5"
                        HorizontalOptions="Center"
                        VerticalOptions="Center">

                        <Entry
                            x:Name="idV"
                            FontFamily="MainFont"
                            FontSize="18"
                            FontAttributes="Bold"
                            HorizontalTextAlignment="Center"
                            BackgroundColor="white"
                            TextColor="Black"
                            Keyboard="Numeric"
                            />

                    </Border>
                </VerticalStackLayout>

                <VerticalStackLayout>

                    <Label
                        FontFamily="MainFont"
                        Text="Tipo de Animal"
                        WidthRequest="225"
                        TextColor="Black"
                        FontAttributes="Bold"
                        Padding="55,0,0,5"
                        FontSize="18"/>

                    <Border
                        Stroke="#ff888f"
                        StrokeThickness="2"
                        HeightRequest="45"
                        WidthRequest="162"
                        Margin="45,0,0,0"
                        StrokeShape="RoundRectangle 5">

                        <Entry
                            x:Name="animalV"
                            FontFamily="MainFont"
                            FontSize="18"
                            FontAttributes="Bold"
                            HorizontalTextAlignment="Center"
                            BackgroundColor="white"
                            TextColor="Black"
                            />

                    </Border>
                </VerticalStackLayout>
                </HorizontalStackLayout>

                <Button
                    FontFamily="MainFont"
                    x:Name="confirm"
                    Text="Confirmar"
                    BorderWidth="2"
                    BorderColor="#ff888f"
                    BackgroundColor="white"
                    TextColor="Black"
                    WidthRequest="105"
                    FontAttributes="Bold"
                    FontSize="14"
                    CornerRadius="20"
                    Clicked="confirm_Pressed"
                    Pressed="OnButtonPressed"
                    Released="OnButtonReleased"/>

                <Border
                    Stroke="#ff888f"
                    StrokeThickness="2"
                    HeightRequest="300"
                    WidthRequest="250"
                    StrokeShape="RoundRectangle 5">

                    <CollectionView x:Name="listViewAnimals" SelectionMode="Single" SelectionChanged="animalSlct">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <VerticalStackLayout Padding="10">
                                    <Label Text="{Binding Id}" 
                                           FontSize="16" 
                                           FontAttributes="Bold" 
                                           TextColor="Black"
                                           />
                                    
                                    <Label Text="{Binding Type}" 
                                           FontSize="16" 
                                           TextColor="Black"
                                           />
                                    <BoxView HeightRequest="1" BackgroundColor="Gray"/>
                                </VerticalStackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    

                </Border>

                <Button
                    FontFamily="MainFont"
                    x:Name="save"
                    Text="Salvar"
                    BorderWidth="2"
                    BorderColor="#ff888f"
                    BackgroundColor="white"
                    TextColor="Black"
                    FontAttributes="Bold"
                    WidthRequest="105"
                    FontSize="16"
                    CornerRadius="20"
                    Clicked="save_Pressed"
                    Pressed="OnButtonPressed"
                    Released="OnButtonReleased"/>

                <Button
                    x:Name="delButton"
                    Text="Excluir"
                    BorderWidth="2"
                    BorderColor="#ff888f"
                    BackgroundColor="white"
                    TextColor="Black"
                    FontAttributes="Bold"
                    WidthRequest="105"
                    FontSize="16"
                    CornerRadius="20"
                    Clicked="delButton_Pressed"/>
                
            </VerticalStackLayout>
        </ScrollView>

        <Label
            FontFamily="MainFont"
            Grid.Row="1"
            FontSize="16"
            FontAttributes="Bold"
            TextColor="Black"
            Text="Termos de Uso | PolÃ­tica de Dados"
            HorizontalTextAlignment="Center"
            VerticalTextAlignment="Center"
            Padding="10"/>
    </Grid>

</ContentPage>