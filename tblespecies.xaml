<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlphaVet.tblespecies">

    <Grid 
        RowDefinitions="*,Auto" 
        BackgroundColor="White">

        <ScrollView 
            Grid.Row="0"
            BackgroundColor="White">

            <VerticalStackLayout 
                Padding="30,0" 
                Spacing="15">

                <VerticalStackLayout>

                    <Image
                            WidthRequest="80"
                            Source="logoalphav.png"
                            Margin="-130,-10,0,10"
                            VerticalOptions="Center"
                            HorizontalOptions="Center"
                           />

                    <Label
                            Text="AlphaVet"
                            FontFamily="AlphaVet"
                            FontSize="30"
                            VerticalTextAlignment="Center"
                            HorizontalTextAlignment="Center"
                            Margin="70,-92,0,15"
                            />
                </VerticalStackLayout>

                <HorizontalStackLayout
                    Spacing="-150"
                    Margin="-32,0,0,0"
                    VerticalOptions="Center"
                    HorizontalOptions="Center">
                <VerticalStackLayout>

                    <Label
                        FontFamily="MainFont"
                        Text="ID"
                        WidthRequest="225"
                        FontAttributes="Bold"
                        TextColor="Black"
                        Padding="50,0,0,5"
                        FontSize="18"
                        />

                    <Border
                        Stroke="#ff888f"
                        StrokeThickness="2"
                        HeightRequest="45"
                        WidthRequest="70"
                        Margin="-72,0,0,0"
                        StrokeShape="RoundRectangle 5"
                        HorizontalOptions="Center"
                        VerticalOptions="Center">

                        <Entry
                            x:Name="txtid"
                            FontFamily="MainFont"
                            FontSize="18"
                            FontAttributes="Bold"
                            HorizontalTextAlignment="Center"
                            BackgroundColor="white"
                            TextColor="Black"
                            Keyboard="Numeric"
                            />

                    </Border>
                </VerticalStackLayout>

                <VerticalStackLayout>

                    <Label
                        FontFamily="MainFont"
                        Text="Tipo de Animal"
                        WidthRequest="225"
                        TextColor="Black"
                        FontAttributes="Bold"
                        Padding="55,0,0,5"
                        FontSize="18"/>

                    <Border
                        Stroke="#ff888f"
                        StrokeThickness="2"
                        HeightRequest="45"
                        WidthRequest="162"
                        Margin="45,0,0,0"
                        StrokeShape="RoundRectangle 5">

                        <Entry
                            x:Name="txtespn"
                            FontFamily="MainFont"
                            FontSize="18"
                            FontAttributes="Bold"
                            HorizontalTextAlignment="Center"
                            BackgroundColor="white"
                            TextColor="Black"
                            />

                    </Border>
                </VerticalStackLayout>
                </HorizontalStackLayout>

                <Button
                    FontFamily="MainFont"
                    x:Name="savebtn"
                    Text="Inserir"
                    BorderWidth="2"
                    BorderColor="#ff888f"
                    BackgroundColor="white"
                    TextColor="Black"
                    WidthRequest="105"
                    FontAttributes="Bold"
                    FontSize="14"
                    Margin="125,0,0,0"
                    CornerRadius="20"
                    Clicked="savebtn_Clicked"
                    Pressed="OnButtonPressed"
                    Released="OnButtonReleased"/>

                <Button
                    FontFamily="MainFont"
                    x:Name="change"
                    Text="Alterar"
                    BorderWidth="2"
                    BorderColor="#ff888f"
                    BackgroundColor="white"
                    TextColor="Black"
                    WidthRequest="105"
                    FontAttributes="Bold"
                    FontSize="14"
                    Margin="-125,-58,0,0"
                    CornerRadius="20"
                    Clicked="change_Clicked"
                    Pressed="OnButtonPressed"
                    Released="OnButtonReleased"/>

                <Button
                    FontFamily="MainFont"
                    x:Name="clean"
                    Text="Limpar"
                    BorderWidth="2"
                    BorderColor="#ff888f"
                    BackgroundColor="white"
                    TextColor="Black"
                    WidthRequest="105"
                    FontAttributes="Bold"
                    FontSize="14"
                    CornerRadius="20"
                    Clicked="clean_Clicked"
                    Pressed="OnButtonPressed"
                    Released="OnButtonReleased"/>

                <Border
                    Stroke="#ff888f"
                    StrokeThickness="2"
                    HeightRequest="50"
                    WidthRequest="250"
                    StrokeShape="RoundRectangle 5">
                    
                    <SearchBar x:Name="searchtxt" 
                       Placeholder="Procurar Pet"
                       TextChanged="searchtxt_TextChanged"
                       />
                    
                </Border>

                <Border
                    Stroke="#ff888f"
                    StrokeThickness="2"
                    HeightRequest="300"
                    WidthRequest="250"
                    StrokeShape="RoundRectangle 5">



                    <ListView x:Name="especielist" ItemSelected="especielist_ItemSelected">
                        <ListView.Header>
                            <Grid ColumnDefinitions="120, 120">
                                <Label Grid.Column="0" Text="ID" HorizontalTextAlignment="Center"/>
                                <Label Grid.Column="1" Text="Espécie" HorizontalTextAlignment="Center"/>

                            </Grid>
                        </ListView.Header>

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <ViewCell.ContextActions>
                                        <MenuItem Text="Remover" Clicked="MenuItem_Clicked"/>
                                    </ViewCell.ContextActions>

                                    <Grid ColumnDefinitions="120, 120">
                                        <Label Grid.Column="0" Text="{Binding espid}" HorizontalTextAlignment="Center"/>
                                        <Label Grid.Column="1" Text="{Binding espnome}" HorizontalTextAlignment="Center"/>
                                    </Grid>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>


                </Border>

                <Button
                    FontFamily="MainFont"
                    x:Name="save"
                    Text="Voltar"
                    BorderWidth="2"
                    BorderColor="#ff888f"
                    BackgroundColor="white"
                    TextColor="Black"
                    FontAttributes="Bold"
                    WidthRequest="105"
                    FontSize="16"
                    CornerRadius="20"
                    Clicked="save_Pressed"
                    Pressed="OnButtonPressed"
                    Released="OnButtonReleased"/>

            </VerticalStackLayout>
        </ScrollView>

        <Label
            FontFamily="MainFont"
            Grid.Row="1"
            FontSize="16"
            FontAttributes="Bold"
            TextColor="Black"
            Text="Termos de Uso | Política de Dados"
            HorizontalTextAlignment="Center"
            VerticalTextAlignment="Center"
            Padding="10"/>
    </Grid>

</ContentPage>